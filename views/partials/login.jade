//
   Login
section#login
  .container
    .row
      //
         Login
      if !user
          h2 Let's get started!
          br
          div.login-btn
            a.btn.btn-block.btn-linkedin.btn-social(href='/auth/linkedin')
                i.fa.fa-linkedin
                | Sign in with LinkedIn
      else
        .text-center
          if user.profile.picture 
              img(src='#{user.profile.picture}' class="img-circle" style="height: 10em")
          else
            img(src='#{user.gravatar(60)}')
          h2 Welcome back #{user.profile.name || user.email || user.id}
          br
          a.button(href='/suggestions') 
            strong Let's Begin
