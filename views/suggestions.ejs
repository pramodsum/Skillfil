<!DOCTYPE html>
<html>
<head>
    <!-- CSS overrides - remove if you don't need it -->
    <link rel="stylesheet" href="/javascripts/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/javascripts/bootstrap/css/bootstrap-responsive.min.css">
    <link rel="stylesheet" href="/javascripts/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/javascripts/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/custom.css">
    <link rel="stylesheet" href="/stylesheets/normalize.css">
    <title>Skillfill</title>
    <script type="text/javascript" src="javascripts/socket.io.js"></script>
    <script type="text/javascript">
      var profile;
      var socket = io.connect('http://localhost:3001');
      socket.on('news', function (data) {
          console.log(data);
      });
      socket.emit('profile', localStorage.profile);
    </script>
</head>
<body>

<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Skillfil</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li>
          <script type="in/Login">
            Hello, <?js= firstName ?> <?js= lastName ?>.
          </script>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<section id="todoapp">
  <header id="header">
    <h1>Welcome <%= user %></h1>
    <center class="well" style="background-color: rgba(245, 245, 245, 0.2); border-color: transparent;">
        <h3>Hmmmm...Well according to my calculations, the following subjects are valuable for you to learn</h3><br/>
        <div class="container container-fluid">
            <% for(var i = 0; i < skillSuggestions.length && i < 5; i++) { %>
                <a href="#" data-toggle="modal" data-target="#myModal"><span class="label label-success"><%= skillSuggestions[i]['SkillName'] %></span></a>
            <% } %>
            <br/>
            <% if(skillSuggestions.length > 5) { %>
                <% for(var i = 5; i < skillSuggestions.length && i < 10; i++) { %>
                    <a href="#" data-toggle="modal" data-target="#myModal"><span class="label label-warning"><%= skillSuggestions[i]['SkillName'] %></span></a>
                <% } %>
                <br/>
                <% if(skillSuggestions.length > 10) { %>
                    <% for(var i = 10; i < skillSuggestions.length && i < 15; i++) { %>
                        <a href="#" data-toggle="modal" data-target="#myModal"><span class="label label-danger"><%= skillSuggestions[i]['SkillName'] %></span></a>
                    <% } %>        
                    <br/>            
                    <% if(skillSuggestions.length > 15) { %>
                        <% for(var i = 15; i < skillSuggestions.length; i++) { %>
                            <a href="#" data-toggle="modal" data-target="#myModal"><span class="label label-default"><%= skillSuggestions[i]['SkillName'] %></span></a>
                        <% } %>
                    <% } %>
                <% } %>
            <% } %>
        </div>
        <h3>Here's some courses you should check out!</h3><br/>
        <div class="container container-fluid">
            <% for(var i = 0; i < results.length/3; i++) { %>
                <div class="row">
                    <% for(var j = 0; j < 3 && (i*3+j) < results.length; j++) { %>
                        <div class="col-sm-3 panel panel-default">
                          <div class="panel-body">
                            <img src='<%- results[i*3+j]['smallIcon'] %>' class="img-responsive" >
                            <p><strong><a href='<%- course_url.concat(results[i*3+j]['shortName'])%>'><%- results[i*3+j]['name'] %></a></strong></p>
                            <p class="text-justify"><%- results[i*3+j]['shortDescription'] %></p>
                          </div>
                        </div>
                    <% } %>
                </div>
            <% } %>
        </div>
    </center>
  </header>
</section>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="javascripts/bootstrap/js/bootstrap.min.js"></script>
<script src="javascripts/packery.pkgd.min.js"></script>
</body>
</html>